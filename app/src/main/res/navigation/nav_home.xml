<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/action_home">

    <fragment
        android:id="@+id/action_favourite"
        android:name="com.example.recipeappiti.favourite.view.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/action_home"
        android:name="com.example.recipeappiti.home.view.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_action_home_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
        <action
            android:id="@+id/action_action_home_to_action_search"
            app:destination="@id/action_search" />
    </fragment>
    <fragment
        android:id="@+id/action_profile"
        android:name="com.example.recipeappiti.profile.view.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/action_search"
        android:name="com.example.recipeappiti.search.view.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">

        <argument
            android:name="categoryName"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_action_search_to_action_home"
            app:destination="@id/action_home" />

    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.recipeappiti.details.view.RecipeDetailFragment"
        android:label="fragment_recipe_detail"
        tools:layout="@layout/fragment_recipe_detail" >
        <argument
            android:name="recipeId"
            app:argType="string"
            android:defaultValue="52772" />
    </fragment>
</navigation>